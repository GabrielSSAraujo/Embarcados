7-#include <stdlib.h>
#include <string.h>
#include <stdio.h>

int main(int argc, const char * argv[]) {
int i=0;
char entrada[100];
for(i=1;i<argc;i++){
	strcat(entrada,argv[i]);
	strcat(entrada," ");
}
printf("Argumentos = %s",entrada);
   return 0;
}

