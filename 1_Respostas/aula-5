   return 0;
}

8 - //arquivo nun_caracs.c
#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "num_caracs.h"

int main(int argc, const char * argv[]) {
int i=0;
char entrada[100];
scanf("%s",entrada);
	i=Num_Caracs(&entrada);
printf("O numero de caracteres da palavra Ã©: %i\n",i);
return 0;
}
//arquivo num_caracs.h

int Num_Caracs(char *string){
	int number = strlen(string);
return number;
}
9 e 10 -//makefile 
num_caracs: main.o num_caracs.o
	gcc $(CFLAGS) -o num_caracs main.o num_caracs.o
main.o: main.c num_caracs.h
	gcc $(CFLAGS) -c main.c
num_caracs.o: num_caracs.c num_caracs.h
	gcc $(CFLAGS) -c num_caracs.c
clean:
	rm -f *.o num_caracs
//num_caracs.c
#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "num_caracs.h"

int Num_Caracs(char *string){
	int number = strlen(string);
return number;
}
//num_caracs.h
int Num_Caracs(char *string);

//main.c
#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "num_caracs.h"

int main(int argc, char **argv){
for(int i=0;i<argc;i++){
printf ("Argumento:%s /",argv[i]);
printf(" Numero de caracteres: %i\n",Num_Caracs(argv[i]));
}
return 0;
}

11 e 12 - //main.c
#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "num_caracs.h"

int main(int argc, char **argv){
int a=0;
for(int i=0;i<argc;i++){
a += Num_Caracs(argv[i]);
}
printf(" Total de caracteres de entrada: %i\n",a);
return 0;
}
