1 - 
#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include <unistd.h>
#include <string.h>

int main(){
int pid;
int fd[2];
int msg[11];
//criando pipe
pipe(fd);

//criando processo
pid =fork();

//codigo filho
for(int a=1;a<11;a++){
if(pid==0){
	read(fd[0],msg,sizeof(msg));
	printf("FILHO RECEBEU O VALOR- %d\n",msg[a]);
}
//codigo pai
else{	
	msg[a]=a;
	printf("Pai enviou o valor = %d \n",msg[a]);
	write(fd[1],msg,sizeof(msg)); 
	sleep(1);
}}
return 0;
}
2 -
#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include <unistd.h>
#include <string.h>

int main(){
int pid;
int fd[2];
char msg[100];
//criando pipe
pipe(fd);

//criando processo
pid =fork();

//codigo filho
if(pid==0){
	strcpy(msg,"FILHO: Pai, qual é a verdadeira essência da sabedoria?");
	write(fd[1],msg,sizeof(msg));
	sleep(1);

	read(fd[0],msg,sizeof(msg));
	printf("%s\n",msg);

	strcpy(msg,"FILHO: Mas até uma criança de três anos sabe disso!");
	write(fd[1],msg,sizeof(msg));
	sleep(1);

	read(fd[0],msg,sizeof(msg));
	printf("%s\n",msg);

}
//codigo pai
else{	
	read(fd[0],msg,sizeof(msg)); 
	printf("%s\n",msg);

	strcpy(msg,"PAI: Não façais nada violento, praticai somente aquilo que é justo e equilibrado.");
	write(fd[1],msg,sizeof(msg));
	sleep(1);

	read(fd[0],msg,sizeof(msg)); 
	printf("%s\n",msg);

	strcpy(msg,"PAI: Sim, mas é uma coisa difícil de ser praticada até mesmo por um velho como eu...");
	write(fd[1],msg,sizeof(msg));
	sleep(1);
}
return 0;
}
3 - 
int main(){
int pid_1;
int pid_2;
int fd[2];
char msg[100];
//criando pipe
pipe(fd);
//criando processo


pid_1 =fork();
//codigo filho 1
if(pid_1==0){
	strcpy(msg,"FILHO1: Quando o vento passa, é a bandeira que se move.\n");
	write(fd[1],msg,sizeof(msg));
	sleep(1);
	read(fd[0],msg,sizeof(msg));
	printf("%s",msg);
}
pid_2 =fork();
//codigo filho 2
if(pid_2==0){

	strcpy(msg,"FILHO2: Não, é o vento que se move.\n");
	write(fd[1],msg,sizeof(msg));

}
//codigo pai
else{	
	read(fd[0],msg,sizeof(msg));
	printf("%s",msg);
	sleep(1);
	strcpy(msg,"PAI: Os dois se enganam. É a mente dos senhores que se move.\n");
	write(fd[1],msg,sizeof(msg));
}
return 0;
}


