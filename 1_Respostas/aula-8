1 - #include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>

int main(){

int a=3,b=2,c=1;

	pid_t child_pid;
	pid_t grandson_pid;

	printf("O ID desse processo e %d\n",(int) getpid());
	printf(" Antes de criar o processo-filho, a=%d, b=%d e c=%d\n", a, b, c);
	
	child_pid = fork();
	
	if(child_pid==0){
		grandson_pid = fork();

		if(grandson_pid==0){

			printf("Esse e o processo neto de id %d\n",(int) getpid());
			a = 20;
			b = 12;
			c = 21;
			printf("Os valores de a b e c mudarem no processo filho-, a=%d, b=%d e c=%d\n", a, b, c);
		}
		else{

			a = 10;
			b = 24;
			c = 37;

			printf("Processo filho ID=%d\n",(int) getpid());
			printf("Os valores de a b e c mudarem no processo filho-, a=%d, b=%d e c=%d\n", a, b, c);

	}}

	else{
		printf("processo pai - valores -, a=%d, b=%d e c=%d\n", a, b, c);
		printf(" Seu filho tem o ID %d \n", child_pid);
		printf("Eseu neto tem ID %d\n",grandson_pid);
	}


return 0;
}

2-#include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>


int main(int argc, char **argv){

for(int i=1; i<argc; i++){

system(argv[i]);

}
return 0;
}
3 - #include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <sys/wait.h>


int main(int argc, const char *argv[]){

for(int i=1; i<argc; i++){

	char * lista_de_argumentos[] = {(char *)argv[i], NULL};

	pid_t child_pid = fork();

	if(child_pid==0){

		execvp(lista_de_argumentos[0], lista_de_argumentos);
	}

	else{
		wait(NULL);
	}
}

return 0;
}
4-#include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <sys/wait.h>



int v_global = 0; // Variavel global para este exemplo
void Incrementa_Variavel_Global(pid_t id_atual)
{
	v_global++;
	printf("ID do processo que executou esta funcao = %d\n", id_atual);
	printf("v_global = %d\n", v_global);
}

int main(){

	pid_t child_pid;
	pid_t child_pid2;
	pid_t child_pid3;
	
	child_pid = fork();
	if(child_pid == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}

	child_pid2 = fork();
	if(child_pid2 == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}

	child_pid3 = fork();
	if(child_pid3 == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}
	
	else{
		sleep(1);
	}

return 0;
}

// os propcessos enxergam a variavel como global, pois sempre que é chamada ela inicia com o valor 0 e incrementa 1 independente da quantidade de vezes que a função é chamada

5 - #include <stdlib.h>
#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <sys/wait.h>



int v_global = 0; // Variavel global para este exemplo
void Incrementa_Variavel_Global(pid_t id_atual)
{
	v_global++;
	printf("ID do processo que executou esta funcao = %d\n", id_atual);
	printf("v_global = %d\n", v_global);
}

int main(){

	pid_t child_pid;
	pid_t child_pid2;
	pid_t child_pid3;
	
	child_pid = fork();

	
	if(child_pid == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}
	child_pid2 = fork();
	
	if(child_pid2 == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}
	child_pid3 = fork();
	if(child_pid3 == 0){
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
		exit(1);
	}
	
	else{
	sleep(1);
	printf("processo pai\n");
	int a = (int) getpid();

		Incrementa_Variavel_Global(a);
	}

return 0;
}

